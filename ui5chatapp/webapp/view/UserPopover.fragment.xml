<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		title="{i18n>popoverTitle}"
		class="sapUiPopupWithPadding"
		placement="Auto">
		
        <beginButton>
			<Button text="{i18n>closeBtn}" press=".onClosePopover" />
		</beginButton>
        
		<content>
            <VBox class="sapUiSmallMargin">
                <HBox alignItems="Center" class="sapUiSmallMarginBottom">
                    <Avatar src="{chatModel>AuthorPic}" displaySize="L" class="sapUiSmallMarginEnd"/>
                    <VBox>
                        <Title text="{chatModel>Author}" level="H3"/>
                        <ObjectStatus 
                            text="{chatModel>Status}" 
                            state="{chatModel>StatusState}" 
                            icon="sap-icon://circle-task-2"/>
                    </VBox>
                </HBox>
                
                <Label text="{i18n>labelJob}" design="Bold"/>
                <Text text="{chatModel>JobTitle}" class="sapUiTinyMarginBottom"/>
                
                <Label text="{i18n>labelTime}" design="Bold"/>
                <Text text="{chatModel>Date}"/>
            </VBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>